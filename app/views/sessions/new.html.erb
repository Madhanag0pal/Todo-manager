<p class = "NewUsers-title">Sign-in!</p>
<section class="UsersNew">
  <%= form_with url: new_sessions_path do |form| %>
    <div class = "Form-section">
      <p class = "FormInput-lable"> Email: </p>
      <%= form.text_field :email, class: "Form-input" %>
    </div>
    <div class = "Form-section">
      <p class = "FormInput-lable"> Password: </p>
      <%= form.password_field :password, class: "Form-input" %>
    </div>
    <div class = "Form-section">
      <%= submit_tag "Sign-In!", class: "Form-submit" %>
    </div>
  <% end %>
</section>

<hr>
<div class="Home-authenticate">
  <p class = "FormInput-lable">
    If you are a new user <%= link_to "Sign-up here", new_user_path %>
  </p>
</div>
